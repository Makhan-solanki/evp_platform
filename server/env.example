# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/experience_verification"

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Firebase Configuration
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-make-it-long-and-complex"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-make-it-different"
JWT_EXPIRE="15m"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password-or-app-password"
FROM_EMAIL="noreply@yourapp.com"
FROM_NAME="Experience Verification Platform"

# Application Configuration
NODE_ENV="development"
PORT=5000
CLIENT_URL="http://localhost:3000"
API_URL="http://localhost:5000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=20

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,application/pdf"
UPLOAD_FOLDER="uploads"

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-key"
COOKIE_SECRET="your-cookie-secret-key"

# OCR Service Configuration (Optional)
OCR_API_KEY="your-ocr-api-key"
OCR_SERVICE_URL="https://api.ocr.space/parse/image"

# Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Monitoring Configuration (Optional)
SENTRY_DSN="your-sentry-dsn"
NEW_RELIC_LICENSE_KEY="your-newrelic-license-key"

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=true
ENABLE_FILE_VIRUS_SCAN=false
ENABLE_REAL_TIME_NOTIFICATIONS=true

# Development Configuration
LOG_LEVEL="debug"
ENABLE_QUERY_LOGGING=true
ENABLE_REQUEST_LOGGING=true

# Production Configuration (Override in production)
# LOG_LEVEL="info"
# ENABLE_QUERY_LOGGING=false
# ENABLE_REQUEST_LOGGING=false
